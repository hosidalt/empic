%header
  .header-main
    .header-main__top.clearfix
      %h1
        =link_to root_path, class: 'title' do
          empic
      %form{ class: 'input-search' }
        %input{ placeholder: "タグから探す"}
        %i.fa.fa-search
      .header-main__top__right
        %ul.right__block.clearfix
          = form_for (@picture) do |f|
            %li.right__block--element.clearfix
              %label.fa.fa-picture-o{for: 'picture_image'}
                = f.file_field :image, class: 'fa fa-picture-o'
          %li.right__block--element.clearfix
            %i.fa.fa-tags

%nav.indicate-tag
  .indicate-tag__content
